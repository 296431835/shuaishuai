<!doctype html>
<html>

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
        <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
        <title>sign_in</title>
        <link rel="stylesheet" type="text/css" href="./css/api.css" />
        <link rel="stylesheet" type="text/css" href="./css/sign_in.css" />
        <link rel="stylesheet" type="text/css" href="./fonts/iconfont.css">
        <style type="text/css">
            * {
                font-family: "微软雅黑";
                text-decoration: none;
                list-style-type: none;
            }
            
            html,
            body {
                height: 100%;
            }
            
            #content {
                width: 75%;
                height: 100%;
                margin: 0 auto;
                display: -webkit-box;
                display: -webkit-flex;
                -webkit-box-orient: vertical;
                -webkit-flex-flow: column;
            }
            
            #logo {
                -webkit-box-flex: 1;
                -webkit-flex: 1;
                display: -webkit-box;
                display: -webkit-flex;
                -webkit-box-align: center;
                -webkit-box-pack: center;
                -webkit-align-items: center;
                -webkit-justify-content: center;
            }
            
            #form {
                -webkit-box-flex: 1;
                -webkit-flex: 1;
            }
            
            .sign_in_logo {
                position: relative;
                width: 40%;
                padding-top: 40%;
            }
            
            .sign_in_logo img {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                border-radius: 50%;
            }
            
            #sign_in_form {
                width: 100%;
                display: -webkit-box;
                display: -webkit-flex;
                -webkit-box-orient: vertical;
                -webkit-flex-flow: column;
            }
            
            .sign_in_number {
                width: 100%;
                border-bottom: 1px solid #BE1919;
                display: -webkit-box;
                display: -webkit-flex;
            }
            
            .sign_in_number label {
                line-height: 45px;
                padding: 0 7px;
            }
            
            .sign_in_number input {
                -webkit-box-flex: 1;
                -webkit-flex: 1;
                outline: 0;
            }
            
            .sign_in_input {
                height: 50px;
            }
            
            .sign_in_button {
                width: 100%;
                padding: 10px 0;
                font-size: 16px;
                border-radius: 10px;
                border: 1px solid #BE1919;
                background-color: #be1919;
                letter-spacing: 5px;
                color: #ffffff;
                font-weight: bold;
                outline: 0;
            }
            
            .sign_in_form .sign_in_number {
                height: 45px;
            }
            
            input::-webkit-input-placeholder {
                color: #BE1919;
            }
            
            .icon1 {
                color: #BE1919;
                font-size: 26px;
                font-weight: 500;
            }
            
            .sign_in_number label {
                color: #974157;
                font-weight: bold;
            }
            
            .sign_in_row3 {
                width: 100%;
                padding-top: 7%;
            }
            
            .sign_in_row4 {
                width: 100%;
                margin-top: 10px;
                display: -webkit-box;
                display: -webkit-flex;
                -webkit-justify-content: flex-end;
                -webkit-box-pack: end;
            }
            
            .sign_in_row4 a {
                color: #BE1919;
                font-size: 14px;
            }
        </style>
    </head>

    <body>
        <div id="content">
            <div id="logo">
                <div class="sign_in_logo">
                    <img src="image/sign_in_logo.png">
                </div>
            </div>
            <div id="form">
                <form id='sign_in_form' class="sign_in_form">
                    <div class="sign_in_number">
                        <label><i class="iconfont icon1">&#xe60c;</i></label>
                        <input id='username' type="text" class="sign_in_input" placeholder=" 账号">
                    </div>
                    <div class="sign_in_number">
                        <label><i class="iconfont icon1">&#xe62e;</i></label>
                        <input id='password' type="password" class="sign_in_input" placeholder=" 密码">
                    </div>
                    <div class="sign_in_row3">
                        <button id="sign_in_button" type="button" class="sign_in_button" onclick="dologin();">
                            登 录
                        </button>
                    </div>
                    <div class="sign_in_row4">
                        <a href="#">忘记密码？</a>
                    </div>
                </form>
            </div>
        </div>
    </body>
    <script type="text/javascript" src="./script/api.js"></script>
    <script type="text/javascript">
        apiready = function() {
            api.addEventListener({
                name: 'viewdisappear'
            }, function(ret, err) {
                api.closeWin();
            });


        };

        function dologin() {
            var username = $api.val($api.byId('username'));

            var password = $api.val($api.byId('password'));
            if (username.trim() == '') {
                api.toast({
                    msg: '用户名不能为空，亲'
                });
                return;
            }
            if (password.trim() == '') {
                api.toast({
                    msg: '密码不能为空'
                });
                return;
            }

            api.showProgress({
                style: 'default',
                animationType: 'fade',
                title: '努力加载中...',
                text: '先喝杯茶...',
                modal: false
            });

            api.ajax({ //请求oauth接口，获取两个token

                url: $api.getStorage('url_local') + '/oauth/token?grant_type=password',
                method: 'post',

                data: {
                    values: {
                        'username': '1379681506@qq.com',
                        'password': '100centa30821'
                    },
                    files: {
                        fileName: 'filePath'
                    }
                },
                headers: {
                    'Authorization': 'Basic YXBwOjEyMzQ1Ng=='
                }
            }, function(ret, err) {
                if (ret) { //请求成功
                    alert('token请求成功！');

                    if (ret.access_token && ret.user_id) {
                        var access_token = ret.access_token;
                        var user_id = ret.user_id;
                        $api.setStorage('access_token_local', ret.access_token);
                        $api.setStorage('user_id_local', ret.user_id);

                        api.ajax({ //请求用户信息
                            url: $api.getStorage('url_local') + '/user/selfinfo?access_token=' + access_token + '&user_id=' + user_id,
                            method: 'get',

                        }, function(ret, err) {
                            if (ret) {
                                alert('获取用户信息成功');
                                if (ret && ret.userId == user_id) {
                                    $api.setStorage('avator_local', ret.avator);
                                    $api.setStorage('name_local', ret.name);
                                    $api.setStorage('account_local', username);
                                    $api.setStorage('tel_local', ret.tel);
                                    $api.setStorage('province_local', ret.province);
                                    $api.setStorage('branch_name_local', ret.branch.name);
                                    openMain(); //当token请求成功并且用户信息请求成功后打开主页
                                }
                            } else {
                                alert(JSON.stringify(err));
                            }
                        });
                    }


                    $api.setStorage('logined_local', 'true'); //设置用户为已登录状态
                } else { //请求出错

                    alert('token请求失败');
                    var error = err.body.error;
                    var error_description = err.body.error_description;


                    if (error && error_description) {
                        api.toast({
                            msg: error_description
                        });
                    }

                }
            });
            api.hideProgress();
        }

        function openMain() {
            api.openWin({
                name: 'main',
                url: 'main.html',
                pageParam: {
                    name: 'value'
                }
            });
        }
    </script>

</html>
